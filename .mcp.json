{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ],
      "env": {}
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "./kb/memory.json"
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {}
    },
    "code-audit": {
      "command": "npx",
      "args": [
        "@moikas-code/code-audit-mcp",
        "start"
      ],
      "env": {}
    },
    "kb-mcp": {
      "command": "npx",
      "args": [
        "@moikas/kb-mcp",
        "serve"
      ],
      "env": {}
    }
  }
}